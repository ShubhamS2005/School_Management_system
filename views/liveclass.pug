<!DOCTYPE html>
html(lang="en")
    head
      meta(charset='utf-8')
      meta(name='viewport' content='width=device-width, initial-scale=1')
      title Best Platform for Onlne School Mangement | GyanMandir 
block scripts
    script(src="/socket.io/socket.io.js")
    script(src="https://kit.fontawesome.com/c939d0e917.js")
    script(src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js")
    script(src="/static/videocontroller.js")

    


block style 
    style  
        include ../static/teacher.css
        include ../static/dashboard.css
        include ../static/liveclass.css 


block content
    nav#navbar
        ul
            li 
                img(src="/static/photos/school_building.png", alt="school")
            
        div#side-bar
            ul
                li #[a(href='/setting') Settings]
                li #[a(href='/teacherlogout') Logout ]

        - const ROOM_ID = "roomId";
    
    section#first-section 
        p Dashboard   
    section#main-section
.header
  .logo
    .header__back
      i.fas.fa-angle-left
    h3
      | Video Chat
.main
  .main__left
    .videos__group
      #video-grid
    .options
      .options__left
        #stopVideo.options__button
          i.fa.fa-video-camera
        #muteButton.options__button
          i.fa.fa-microphone
        #showChat.options__button
          i.fa.fa-comment
      .options__right
        #inviteButton.options__button
          i.fas.fa-user-plus
  
  .main__right
    .main__chat_window
      .messages
    .main__message_container
      input#chat_message(type='text' autocomplete='off' placeholder='Type message here...')
      #send.options__button
        i.fa.fa-plus(aria-hidden='true')

        


        
    


    